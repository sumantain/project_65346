<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:sbview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/singleMessageContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.sbw.lookon.custom.SbTextView
            android:id="@+id/singleMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/bubble_b"
            android:gravity="center"
            
            android:padding="@dimen/view_size_15"
            android:text="Hello bubbles!"
            android:textSize="@dimen/txt_size_15"
            sbview:typeface="Roboto-Bold.ttf"
            android:textColor="@android:color/primary_text_light" />
    </LinearLayout>

</LinearLayout>